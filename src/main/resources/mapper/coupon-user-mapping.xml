<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserCouponDAO">
	<resultMap type="UserCouponVO" id="UserCouponVO">
		<result property="coupon_number" column="COUPON_NUMBER" />
		
	</resultMap>

	<select id="getUserCouponList" resultType="UserCouponVO">
		<![CDATA[
			SELECT * FROM user_coupon  
		]]>
	</select>
	<select id="getCouponBySerial" resultType="UserCouponVO">
		<![CDATA[
			SELECT * FROM user_coupon WHERE coupon_serial=#{coupon_serial}
		]]>
	</select>
	
	<select id="getUserHavingCouponDetail" resultType="UserCouponVO">
		<![CDATA[
			SELECT * FROM user_coupon WHERE userid=#{userid}
		]]>
	</select>
	
	<insert id="deleteUserCoupon" >
		<![CDATA[
			DELETE FROM user_coupon
			WHERE coupon_seq = #{coupon_seq}
		]]>
	</insert>
	
	
	<insert id="insertUserCoupon" >
		<![CDATA[
			INSERT INTO user_coupon(startdate, coupon_serial, userid)
			VALUES (#{startdate}, #{coupon_serial}, #{userid});
		]]>
	</insert>
	
</mapper>
